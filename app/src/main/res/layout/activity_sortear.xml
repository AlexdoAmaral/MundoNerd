<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cinza"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:src="@drawable/mundonerd"/>

    <Button
        android:id="@+id/btnGerarFraseUm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:backgroundTint="@color/azul"
        android:padding="16dp"
        android:text="0 a 10"
        android:onClick="sortearZeroAoDez"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnDois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:onClick="sortearZeroAoCem"
        android:backgroundTint="@color/azul"
        android:textAlignment="center"
        android:text="0 a 100"/>
    <Button
        android:id="@+id/btnTres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:onClick="sortearZeroAoMil"
        android:backgroundTint="@color/azul"
        android:textAlignment="center"
        android:text="0 a 1000"/>
    <Button
        android:id="@+id/btnQuatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:onClick="sortearZeroAoDezMil"
        android:backgroundTint="@color/azul"
        android:textAlignment="center"
        android:text="0 a 10000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="..."
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/txtResultado"/>


</LinearLayout>